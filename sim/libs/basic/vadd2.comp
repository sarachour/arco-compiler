@name
	vadd2
@inputs
	a : 1
	b : 1

@outputs
	o

@params
	z
	y
	x

@model
	$o.V: $x*$a.V + $y*$b.V + $z

@spice-use
	:var name
	X$name $a $b $o vadd2

@spice-comp
	:var Q1
	:var Q2
	:var Q3
	:dep opamp741
	.SUBCKT vadd2 va vb vout
		Ra va j $Q1
		Rb vb j $Q2
		Rf j jout $Q3
		XOP 0 j jout opamp741
		RO jout vout 0
	.ENDS vadd2
